<wxs src='swiper.wxs' module = 'lo'  />

<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" >


<block wx:for="{{imgUrls}}">
  <swiper-item>
   <image src='{{item}}' width="355" height="150"></image>
  </swiper-item>
  </block>


</swiper>

<button bindtap='changeIndictors'>indictor-dots</button>
<button bindtap='autoplay'>autoplay</button>
<slider bindchange='intervalChange' min='500' max='2000'>interval</slider>
<slider bindchange='dutationChange' min='1000' max='10000'>duration</slider>

